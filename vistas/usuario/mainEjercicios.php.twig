{% extends "plantilla.php.twig" %}

{% block cuerpo %}

		<div class="row row-cols-1 row-cols-md-3 g-4">
        {% for entrenamiento in entrenamientos %}		
			<div class="col">
				<div class="card shadow" style="width:18rem;">
					<img src="{{ entrenamiento.imagen_ejercicio }}" class="card-img-top" />
					<div class="card-body">
						<h4 class="card-title">{{ entrenamiento.musculo|upper }}</h4>
						<h6>DIFICULTAD: {{ entrenamiento.dificultad }}</h6>
						<h6>{{ entrenamiento.nombre }}</h6>
						<p class="card-text">{{ entrenamiento.explicacion }}</p>
						<a href="info.php?id={{ entrenamiento.idEntrenamiento }}" class="btn btn-dark btn-sm">Mas info.</a>
					</div>
				</div>
			</div>
			
		{% endfor %}
		</div>
{% endblock %}

