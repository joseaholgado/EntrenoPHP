{% extends "plantilla.php.twig" %}

{% block cuerpo %}


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>	
<link href="./css/estilosModificarUsuario.css" rel="stylesheet" type="text/css" />
<!-- Bootstrap que agrega script para la validación --> -->
  
		{% if mensaje %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ mensaje }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
		  {% endif %}

		  {% if mensajeError %}
        <div class="alert alert-danger alert-dismissible fade show d-none" id="alerta" role="alert">
            {{ mensajeError }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
		  {% endif %}

		  {% if mensajeError %}
            	<div class="alert alert-danger alert-dismissible fade show" role="alert">
                	{{ mensajeError|raw }}
                	<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            	</div>
        	{% endif %}

		  <div class="alerta">
            <div class="alert alert-danger alert-dismissible fade show d-none" id="alerta" role="alert">
                Por favor, completa todos los campos.
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
			</div>
		<div class="container">
	
		<form action="modificarUsuarioDatos" method="POST"><!--Direccion de la siguiuente pagina-->

			<input type="hidden" name="_csrf" value="{{ token }}" />
			<input type="hidden" name="m" value="usuario" />
			<input type="hidden" name="f" value="modificarUsuario" />
			<input type="hidden" name="idUsuario" value="{{_session.usuario.idUsuario}}" />

			<div class="header">
				<h2>///Modificación</h2>
			</div>
			<!-- Nombre -->

			<div class="row">
				<div class="col-xs-2">
					<label for="nombre">Nombre: </label>
				</div>

				<div class="col">
					<input class="form-control" id="nombre" type="text" name="nombre" value="{{_session.usuario.nombre}}"/>
				</div>
			</div>

			<!-- Apellido -->
			<div class="row">
				<div class="col-xs-2">
					<label for="apellido">Apellido: </label>
				</div>

				<div class="col">
					<input class="form-control" id="apellido" type="text" name="apellido" value="{{_session.usuario.apellido}}"/>
				</div>
			</div>

			<!-- Email -->
			<div class="row">
				<div class="col-xs-2">
					<label for="Email">Email: </label>
				</div>

				<div class="col">
					<input class="form-control" id="email" type="email" name="email" value="{{_session.usuario.email}}" />
				</div>
			</div>

			<!-- Contraseña  -->
			<div class="row">
				<div class="col-xs-2">
					<label for="pass">Contraseña: </label>
				</div>

				<div class="col">
					<input class="form-control" id="pass" type="password" name="pass" />
				</div>
			</div>

			<!-- Confirmación contraseña  -->
			<div class="row">
				<div class="col-xs-2">
					<label for="passc">Repite tu contraseña: </label>
				</div>

				<div class="col">
					<input class="form-control" id="passc" type="password" name="passc" />
				</div>
			</div>

			<div class="row mt-2">
				<div class="col">
					<button type="submit" class="btn" id="enviar">Actualizar Datos</button>
				</div>
			</div>
			

		</form>
		<div class="img">
			<img src="./img/fondo.png"></img>
		</div>
	</div>

	

	
			
		
		</div>
		
{% endblock %}

